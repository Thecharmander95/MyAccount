%h1 Users
%table
  %thead
    %tr
      %th Id
      %th Username
      %th Email
      %th Edit Role
      %th Role
      %th Remove

  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.username
        %td= user.email
        %td= link_to 'Role Edit', edit_user_path(user)
        %td= user.role
        %td= link_to 'Remove', user, data: { "turbo-method": :delete, turbo_confirm: 'Make sure to delete ALL conversations with this user in it or the site will crash for the user on the other end of that conversation.' }
%br/
= link_to "Back", admin_path, class: "button"
